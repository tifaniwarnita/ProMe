<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tifaniwarnita.prome">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.AppCompat.Light.NoActionBar.FullScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SplashActivity"
            android:theme="@style/AppTheme.AppCompat.Light.NoActionBar.FullScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.AppCompat.Light.NoActionBar.FullScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GuestActivity"
            android:theme="@style/AppTheme.AppCompat.Light.NoActionBar.FullScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AdminActivity"
            android:theme="@style/AppTheme.AppCompat.Light.NoActionBar.FullScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AvailablePlacesActivity"
            android:theme="@style/AppTheme.AppCompat.Light.NoActionBar.FullScreen" />
        <activity
            android:name=".TutorialActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.AppCompat.Light.NoActionBar.FullScreen" />
        <activity
            android:name=".PromoActivity"
            android:label="@string/title_activity_promo"
            android:theme="@style/AppTheme.AppCompat.Light.NoActionBar.FullScreen"
            android:screenOrientation="portrait" />
    </application>

</manifest>